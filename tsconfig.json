{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*", "src/tests/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "coverage"]
}
